<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".GUI.Infomation">
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/statusbar_gradient"
        android:elevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Back"
            android:drawableStart="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Cập nhật thông tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/edtInfoEmail"
            android:padding="15dp"
            android:drawableStart="@drawable/custom_email_focus"
            android:drawablePadding="15dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:hint="Email"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/edtHoTen"
            android:padding="15dp"
            android:drawableStart="@drawable/custom_person_focus"
            android:drawablePadding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_input"
            android:hint="Nhập tên của bạn"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/edtDienThoai"
            android:padding="15dp"
            android:drawableStart="@drawable/custom_phone_focus"
            android:drawablePadding="15dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:hint="Số điện thoại"
            android:maxLength="10"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/edtDiaChi"
            android:padding="15dp"
            android:drawableStart="@drawable/custom_location_focus"
            android:drawablePadding="15dp"
            android:layout_marginTop="15dp"
            android:layout_margin="10dp"
            android:hint="Địa chỉ"
            android:background="@drawable/custom_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btnUpdateInfomation"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded"
            android:text="Cập nhật thông tin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDeleteAccount"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="Xoá tài khoản"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>